{% extends 'base.html.twig' %}

{% block title %}Hello BatchController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.birthYear) }}
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.issueYear) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.expirationYear) }}
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.height) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.hairColor) }}
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.eyeColor) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.passportId) }}
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.countryId) }}
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col">
                    <button class="btn btn-primary" type="submit" value="Save">Search</button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
